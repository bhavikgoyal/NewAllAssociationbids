@model AssociationBids.Portal.Model.EmailTemplateModel
@{
    ViewBag.Title = "EmailTemplateView";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string Errormessage = Convert.ToString(TempData["ErrorMessage"]);
    string SuccessMessage = Convert.ToString(TempData["SuccessMessage"]);
}
}
@using System.Text.RegularExpressions;

@helper StripHTML(string input)
{
    if (!string.IsNullOrEmpty(input))
    {
        input = Regex.Replace(input, "<.*?>", String.Empty);
        <span>@input</span>
    }
}
<h2>EmailTemplateView</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Content/themes/assets/js/vendors/jquery-3.2.1.min.js"></script>

<!--sidemenu end-->
<!-- app-content-->
<div class="app-content  my-3 my-md-5">
    <div class="side-app">

        <!-- page-header -->
        <div class="page-header">
            <ol class="breadcrumb">
                <!-- breadcrumb -->
                <li class="breadcrumb-item"><a href="EmailTemplateList">Email Template</a></li>
                <li class="breadcrumb-item active" aria-current="page">View Email Template</li>
            </ol><!-- End breadcrumb -->

        </div>
        <!-- End page-header -->
        @if (!string.IsNullOrEmpty(Errormessage))
        {
            <p class="alert alert-success alert-dismissible">
                @Errormessage
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </p>
        }
        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <p class="alert alert-success alert-dismissible">
                @SuccessMessage
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </p>
        }

        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">

                        @*<div class="row">
                            <div class="button-row d-flex mt-4">
                                <a onclick=" EditPage();" class="btn btn-primary ml-auto  pull-right" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                            </div>
                        </div>*@

                        <div class="card-header">
                            <h3 class="card-title">Email Template Detail</h3>
                            <div class="card-options">
                                <a onclick=" EditPage();" class="btn btn-primary ml-auto text-white pull-right" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                <a style="margin-left: 10px;" href="#" class="card-options-collapse mr-2" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            </div>

                        </div>
                        <hr />

                        <div class="form-div">
                            <div class="row">
                                @Html.HiddenFor(item => Model.EmailTemplateKey)
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="form-label">Title</label>
                                        @Html.DisplayFor(item => Model.EmailTitle)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="form-label">Email Type</label>
                                        @Html.DisplayFor(item => item.Title)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="form-label">Subject</label>
                                        @Html.DisplayFor(item => item.EmailSubject)
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label">Body</label>
                                        @StripHTML(Model.Body)

                                    </div>
                                </div>

                            </div><!-- end of row -->

                            <hr />
                            @*<div class="button-row d-flex mt-4">
                                <a href="@Request.UrlReferrer" class="btn btn-default" title="Cancel">Cancel</a>
                            </div>*@
                        </div><!-- end of form-div  -->

                    </div><!--end of card body -->
                </div>
            </div>
        </div>
    </div><!--End side app-->
    <!--footer-->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-12 col-sm-12   text-center">
                    Copyright © 2020 Association Bids. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer-->

</div>
<!-- Custom js-->
<script src="../assets/js/custom.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        //$("#EmailT").closest('li').addClass('active');
        //$("#EmailT1").addClass('active');
        SetActiveMenu($("#EmailT"), false);
        $(".advance_search").click(function () {
            $("#advancesearch3").toggle(500);
        });
        $(".overlayclose").click(function () {
            $("#advancesearch3").hide();
        });
    });
    function EditPage() {

        window.location.href = 'EmailTemplateEdit?EmailTemplateKey=' + $("#EmailTemplateKey").val();

    }
</script>