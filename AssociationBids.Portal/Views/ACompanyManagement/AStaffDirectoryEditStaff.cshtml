            //    }
            //});
            return true;
        }
        else {
            return false;
        }

    });

    $('#Active').click(function () {
        if ($(this).attr('checked')) {
            $("#InActive").prop("checked", true);

        } else {
            $("#InActive").prop("checked", false);
            //alert("1");
            $('#Status').val(1);
            //alert("Status " + $('#Status').val());
        }
    })

    $('#InActive').click(function () {
        if ($(this).attr('checked')) {
            $("#Active").prop("checked", true);

        } else {
            $("#Active").prop("checked", false);
            //alert("2");
            $('#Status').val(2);
            //alert("Status " + $('#Status').val());
