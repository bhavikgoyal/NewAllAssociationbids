    function StaffValidation() {
        $('#loader').show();
        $('.errormessage').html('');

        if ($('#FirstName').val() == "") {
            $('.errormessage').html('Please Enter Mandatory Fields.');
            $('#Error').show();
            $('#FirstName').focus();
            $(window).scrollTop(0);
            return false;
        }

        else if ($('#LastName').val() == "") {
            $('.errormessage').html('Please Enter Mandatory Fields.');
            $('#Error').show();
            $('#LastName').focus();
            $(window).scrollTop(0);
            return false;
        }
        else if ($('#Email').val() == "") {
            $('.errormessage').html('Please Enter Mandatory Fields.');
            $('#Error').show();
            $('#Email').focus();
            $(window).scrollTop(0);
            return false;
        }
        else if (validateEmail($('#Email').val())) {
            $('.errormessage').html('Please Enter Valid Email.');
            //alert("Please Enter Valid Email.");
            $('#Error').show();
            $('#Email').focus();
            $(window).scrollTop(0);
            return false;
        }
        //else if ($('#State').val() == "0") {
        //    $('.errormessage').html('Please Enter Mandatory Fields.');
        //    $('#Error').show();
        //    $('#State').focus();
        //    $(window).scrollTop(0);
        //    return false;
        //}
        else {
            $('#Error').hide();
            return true;
        }
    }


