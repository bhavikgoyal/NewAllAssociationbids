        //if (val != "") {


            //$('#FileName').val("Hello");

        //$('#Error').show();
        //$('#Email').focus();
        //}
 });
    function StaffValidation() {
        debugger;
        $('#loader').show();
        $('.errormessage').html('');

        if ($('#UserName').val() == "") {
            $('.errormessage').html('Please Enter UserName .');
            $('#Error').show();
            $('#FirstName').focus();
            $(window).scrollTop(0);
            return false;
        }

      

        else {
            $('#Error').hide();
            return true;
        }

    }


        function StaffDiretoryDetailsPage()
       {
           var ResourceKey = $('#ResourceKey').val();
           window.location.href = '@Url.Action("AStaffDirectoryView", "AStaffDirectory")'+"?ResourceKey=" + ResourceKey;

        }

</script>