<body class="bg-account">
    <!-- page -->
    <div class="page">

        <!-- page-content -->

        <div class="page-content">
            @using (Html.BeginForm("ForgotPassword", "ForgotPassword", FormMethod.Post))
            {
                <div class="container text-center text-dark">
                    <div class="row">
                        <div class="col-lg-4 d-block mx-auto">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="text-center mb-6">
                                                <img src="~/Content/themes/assets/images/brand/logo.png" class="" alt="">
                                            </div>
                                            <h3>Forgot password</h3>

                                            <div class="alert alert-danger text-left" id="errorDiv" style="display:none;">
                                                <i class="fa fa-close"></i>
                                                <span id="errorMessage"></span>
                                            </div>

                                            @if (ViewBag.msg == "Email has been Send")
                                            {
                                                <div class="alert alert-success text-left" id="successDiv">
                                                    <span><i class="fa fa-check"></i> Reset Password email has been sent</span>
                                                </div>
                                            }
                                            <div class="input-group  mr-auto ml-auto mb-4">
                                                <span class="input-group-addon bg-white"><i class="fa fa-envelope"></i></span>
                                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @tabindex = "1", autocomplete = "off", placeholder = "Email Address", @type = "email" } })
                                            </div>
                                            <div id="emailv" class="diverr" style="color:red;"></div>

                                            @*@if (ViewBag.msg == "Email has been Send")
                                            {
                                                <div id="emailvig" class="diverr" style="color:red;"></div>

                                                <script>
                                                    document.getElementById('emailvig').innerHTML = '&nbsp; Email has been Send...';
                                                </script>
                                            }
                                            @if (ViewBag.msg == "Email not found")
                                            {
                                                <div id="emailvigs" class="diverr" style="color:red;"></div>

                                                <script>
                                                    document.getElementById('emailvigs').innerHTML = '&nbsp; This email address is not registered with us...';
                                                </script>
                                            }*@

                                            <div class="text-center">
                                                <button type="submit" onclick="return Validation()" class="btn btn-primary btn-block">Send</button>
                                                <a href="~/Login/Index" class="btn btn-primary btn-block">Login</a>
                                            </div>
                                            @*<div class="mt-6 btn-list">
                                                <button type="button" class="btn btn-icon btn-facebook"><i class="fa fa-facebook"></i></button>
                                                <button type="button" class="btn btn-icon btn-google"><i class="fa fa-google"></i></button>
                                                <button type="button" class="btn btn-icon btn-twitter"><i class="fa fa-twitter"></i></button>
                                                <button type="button" class="btn btn-icon btn-dribbble"><i class="fa fa-dribbble"></i></button>
                                            </div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- page-content end -->
        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-12 col-sm-12   text-center">
                        Copyright © 2020 Association Bids. All rights reserved.
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <!-- page End-->
    <!-- Jquery js-->
    <script src="~/Content/themes/assets/js/vendors/jquery-3.2.1.min.js"></script>

    <!--Bootstrap.min js-->
    <script src="~/Content/themes/assets/plugins/bootstrap/popper.min.js"></script>
    <script src="~/Content/themes/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!--Jquery Sparkline js-->
    <script src="~/Content/themes/assets/js/vendors/jquery.sparkline.min.js"></script>

    <!-- Chart Circle js-->
    <script src="~/Content/themes/assets/js/vendors/circle-progress.min.js"></script>

    <!-- Star Rating js-->
    <script src="~/Content/themes/assets/plugins/rating/jquery.rating-stars.js"></script>

    <!-- Sidebar Accordions js -->
    <script src="~/Content/themes/assets/plugins/sidemenu-responsive-tabs/js/easyResponsiveTabs.js"></script>

    <!--Moment js-->
    <script src="~/Content/themes/assets/plugins/moment/moment.min.js"></script>

    <!-- Daterangepicker js-->
    <script src="~/Content/themes/assets/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>

    <!-- Perfect scroll bar js-->
    <script src="~/Content/themes/assets/plugins/pscrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/themes/assets/plugins/pscrollbar/p-scroll.js"></script>

    <!-- Custom js-->
    <script src="~/Content/themes/assets/js/custom.js"></script>
    <script>
        document.getElementById('emailv').style.visibility = "hidden";
        $(document).ready(function () {
            $('#email').val("");
            $("#errorDiv").hide();
            $("#successDiv").hide();
            if ('@ViewBag.msg' == "Email not found") {
                $("#errorDiv").show(100);
                $("#errorMessage").html('This email address is not registered with us.');
            }
            else if ('@ViewBag.msg' == "Email has been Send")
            {
                $("#successDiv").show(300);
            }
            else {
                $("#errorDiv").hide();
            }
            });
        function Validation() {
            debugger;
            $("#errorDiv").hide();
            $("#successDiv").hide();
            $("#errorMessage").html('This email address is not registered with us.');
            if ($('#email').val() == "") {
                //document.getElementById('emailv').style.visibility = "visible";
                //document.getElementById('emailv').innerHTML = '&nbsp; Please Enter Email.';

                $("#errorDiv").show(300);
                $("#errorMessage").html('Please Enter Email.');
                return false;
            }
            else if (validateEmail($('#email').val())) {
                //document.getElementById('emailv').style.visibility = "visible";
                //document.getElementById('emailv').innerHTML = '&nbsp; Please Enter Valid Email.';

                $("#errorDiv").show(300);
                $("#errorMessage").html('Please Enter Valid Email.');
                return false;
            }
            else {
                return true;
            }
        }

        function validateEmail(sEmail) {
            var filter = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
            var expr = /^[a-zA-Z0-9._]+[a-zA-Z0-9]+@@[a-zA-Z0-9]+\.[a-zA-Z]{2,4}$/;
            if (filter.test(sEmail)) {
                return false;
            }
            else {
                return true;
            }
        }
    </script>
</body>
</html>