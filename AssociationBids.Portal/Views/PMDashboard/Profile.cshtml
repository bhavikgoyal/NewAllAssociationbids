@using (Html.BeginForm("Profile", "PMDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <!-- app-content-->
    <div class="app-content  my-3 my-md-5">
        <div class="side-app">

            <!-- page-header -->
            <div class="page-header">
                <ol class="breadcrumb">
                    <!-- breadcrumb -->
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
                </ol><!-- End breadcrumb -->

